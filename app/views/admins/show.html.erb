<%= render "shared/header" %>
<div class='main'>
  
  <div class='profile-contents'>
    <h2 class='title'>買付可能商品</h2>
    <div class="subtitle" >
      新着買付可能商品
    </div>
    <ul class='item-lists'>
      <% @admin_items.each do |admin_item| %>
      <li class='list'> 
        <%= link_to admin_item_path(admin_item.id) do %>
        <div class='item-img-content'>
          <%= image_tag admin_item.images[0], class: "item-img" %>
          <%#if admin_item.order.present? %>
          <div class='sold-out'>
            <span>Sold Out!!</span>
          </div>
          <%# end %>
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= admin_item.admin_item_name %>
          </h3>
          <div class='item-price'>
            <span><%= admin_item.price %>円<br></span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li> 
      <%end%>
      <% if @admin_items.empty?  %>
      <li class='list'>
        <%= link_to '#' do %>
        <%= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "item-img" %>
        <div class='item-info'>
          <h3 class='item-name'>
            商品を出品してね！
          </h3>
          <div class='item-price'>
            <span>99999999円<br>(税込み)</span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<%= link_to(new_admin_item_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>出品する</span>
  <%= image_tag 'icon_camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
<%= render "shared/footer" %>